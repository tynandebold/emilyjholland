---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
import PostPreview from '../components/PostPreview.astro';
import ProjectPreview from '../components/ProjectPreview.astro';
import siteConfig from '../data/site-config';
import { sortItemsByDateDesc } from '../utils/data-utils';
import publications from '../content/research/publications.json';

const posts = (await getCollection('media')).sort(sortItemsByDateDesc);
const featuredPosts = posts.filter(({ data }) => data.isFeatured);
---

<BaseLayout
  description={siteConfig.description}
  image={siteConfig.image}
  showHeader={false}
>
  <Hero />
  {
    publications?.length > 0 && (
      <div class="mb-16 sm:mb-24">
        <h2 class="mb-12 text-xl font-serif italic sm:mb-16 sm:text-4xl">
          Research
        </h2>
        {publications.slice(0, 3).map((publication) => (
          <ProjectPreview
            class="mb-10 sm:mb-12"
            headingLevel="h3"
            publication={publication}
          />
        ))}
        <div class="mt-12 sm:mt-16">
          <Button href="/research">View All Research</Button>
        </div>
      </div>
    )
  }
  {
    featuredPosts?.length > 0 && (
      <div class="mb-16 sm:mb-24">
        <h2 class="mb-12 text-xl font-serif italic sm:mb-16 sm:text-4xl">
          Media
        </h2>
        {featuredPosts.map((post) => (
          <PostPreview post={post} class="mb-10 sm:mb-12" headingLevel="h3" />
        ))}
        <div class="mt-12 sm:mt-16">
          <Button href="/media">View All Posts</Button>
        </div>
      </div>
    )
  }
</BaseLayout>
